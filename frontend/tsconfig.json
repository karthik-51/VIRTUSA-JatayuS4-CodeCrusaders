{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",                // ðŸ‘ˆ Needed for JSX support
    "esModuleInterop": true,          // ðŸ‘ˆ Fixes 'export =' issues
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src", "__tests__"]      // ðŸ‘ˆ Make sure tests are included
}
